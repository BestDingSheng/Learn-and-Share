/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 
view{
  font-size: 24rpx;
  color: #999;
}

.mask{
  background:rgba(0,0,0,.3);
  height: 100%;
  width: 100%;
}
.mask image{
  position: absolute;
  width: 100px;
  height: 100px;
  top: 40%;
  left: 50%;
  margin-left: -50px;
  margin-top: -50px;
}